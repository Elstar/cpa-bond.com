{% extends 'admin/base.html.twig' %}

{% block title %}{% trans %}Geo{% endtrans %}{% endblock %}

{% block body %}
    <a href="{{ path('app_admin_geo_create') }}" class="btn btn-info">{% trans %}Create{% endtrans %}</a>
    {% if geos %}
        <div class="pt-2"></div>
        <table class="table table-hover">
            <thead>
            <tr>
                <th class="col-1" scope="col">#</th>
                <th scope="col-1">{% trans %}Name{% endtrans %}</th>
                <th scope="col-1">{% trans %}Counrty{% endtrans %}</th>
                <th scope="col-1">{% trans %}Flag{% endtrans %}</th>
                <th class="col-1" scope="col">{% trans %}Actions{% endtrans %}</th>
            </tr>
            </thead>
            <tbody>
            {% for geo in geos %}
                <tr>
                    <th scope="row">{{ geo.id }}</th>
                    <td>{{ geo.name }}</td>
                    <td>{{ geo.country }}</td>
                    <td>
                        {% if geo.imageFilename %}
                            <img src="{{ geo.imageFilename | imagine_filter('flag') }}">
                        {% else %}
                            -
                        {% endif %}
                    </td>
                    <td><a class="bi-pen" href="{{ path('app_admin_geo_edit', {"id": geo.id}) }}"></a></td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% endif %}
{% endblock %}
